<section class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center">Login</h4>
    </div>
    <div class="panel-body"style = "width: 200px">
        <form  class="px-4 py-3" action="/users/signin" method="POST">
            <div class="form-group">
                <input type="text" name="username" class="col-4" placeholder="Username">
            </div>
            <div class="form-group">
                <input type="password" name="password" class="col-4" placeholder="Password">
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input type="checkbox" name="remember_me" class="form-check-input" id="dropdownCheck">
                    <label class="form-check-label" for="dropdownCheck">
                        Remember me
                    </label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-primary">
            </div>

        </form>
        <div class="panel-body">
            <a class="dropdown-item" href="/users/register">New around here? Sign up</a>
            <a class="dropdown-item" href="#">Forgot password?</a>
        </div>
    </div>
</section>